<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tanuj.vcare">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainOptions" />
        <activity android:name=".VolunteerLoginActivity" />
        <activity android:name=".DonorLoginActivity" />
        <activity android:name=".DonorRegister" />
        <activity android:name=".VolunteerRegister" />
        <activity android:name=".PatientLoginActivity"></activity>
    </application>

</manifest>